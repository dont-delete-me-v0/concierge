FROM node:18-alpine

# Install wget for healthcheck
RUN apk add --no-cache wget

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/api/package*.json ./apps/api/

# Copy Prisma schema
COPY prisma ./prisma

# Copy packages (needed for @concierge/database)
COPY packages/database ./packages/database

# Install all dependencies (including dev dependencies)
RUN npm ci --workspace=apps/api

# Generate Prisma client
RUN npx prisma generate

# Copy config files
COPY eslint.config.js .prettierrc.js ./

# Copy source files will be mounted as volume

EXPOSE 3000

# Use nest CLI with watch mode for hot-reload
CMD ["npm", "run", "start:dev", "--workspace=apps/api"]
